<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <EditText
            android:id="@+id/edtTenEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên món ăn: "/>

        <EditText
            android:id="@+id/edtMoTaEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả: "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtGiaEdit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Giá: "/>

            <Spinner
                android:id="@+id/spnDanhMucEdit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnThemHinhAnhEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa ảnh"/>

            <ImageView
                android:id="@+id/imvHinhAnhEdit"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSuaMonAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sửa món ăn"/>

    </LinearLayout>
</ScrollView>
